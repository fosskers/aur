# Maintainer: Colin Woodbury <colingw@gmail.com>

pkgname=haskell-aur-git
pkgver=20140706
pkgrel=1
pkgdesc="Access package information from Arch Linux's AUR via its RPC interface."
url="https://github.com/aurapm/haskell-aur"
arch=('i686' 'x86_64')
license=('GPL-3')
depends=('ghc' 'haskell-aeson<0.8' 'haskell-aeson-pretty<0.8' 'haskell-filepath'
  'haskell-lens<4.3' 'haskell-mtl' 'haskell-text' 'haskell-vector<0.11'
  'haskell-wreq<0.2')
source=("${pkgname}::git+https://github.com/aurapm/haskell-aur.git")
md5sums=('SKIP')
options=('strip' 'staticlibs')

build() {
  cd "${srcdir}/${pkgname}"
  runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} -O
  runhaskell Setup build
}

package() {
  cd "${srcdir}/${pkgname}"
  runhaskell Setup copy --destdir=${pkgdir}
}
